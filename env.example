# Конфигурация Finance Bot
# Скопируйте этот файл в .env и заполните своими данными

# Telegram Bot Token (получите у @BotFather)
BOT_TOKEN=your_telegram_bot_token_here

# OpenAI API Key (для голосовых команд и распознавания чеков)
OPENAI_API_KEY=your_openai_api_key_here

# Директория для хранения данных
DATA_DIR=data

# Режим отладки (true/false)
DEBUG=false

# Настройки базы данных (для будущего использования)
DB_HOST=localhost
DB_PORT=5432
DB_NAME=finance_bot
DB_USER=finance_user
DB_PASSWORD=your_secure_password_here

# Настройки Redis (для кэширования)
REDIS_HOST=localhost
REDIS_PORT=6379
REDIS_PASSWORD=

# Настройки логирования
LOG_LEVEL=INFO
LOG_FILE=finance_bot.log
LOG_MAX_SIZE=10MB
LOG_BACKUP_COUNT=5
